{
	"manifest_version": 2,

	"name": "Recapper",
	"description": "A tool for recapping Destructoid c-blogs.",
	"version": "1 .0",

	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},

	"page_action": {
		"default_icon": "icon-19.png",
		"default_title": "Recap this blog"
	},

	"permissions": [
		"tabs",
		"cookies",
		"activeTab",
		"*://recaps.wordsinthesky.com/*",
		"http://localhost:5000/*"
	]
}
