{
	"manifest_version": 2,

	"name": "Recapper",
	"description": "A tool for recapping Destructoid c-blogs.",
	"version": "1 .0",

	"background": {
		"scripts": [
			"background.js"
		]
	},

	"page_action": {
		"default_icon": "icon-19.png",
		"default_title": "Recap this blog"
	},

	"permissions": [
		"tabs",
		"activeTab"
	]
}
